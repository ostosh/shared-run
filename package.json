{
  "name": "shared-run",
  "version": "1.0.5",
  "author": {
      "name": "Richard Pierce-Jones",
      "email": "richardpj@gmail.com"
      },
  "description": "A nodejs CLI tool for running shell commands against all local npm package dependencies.",
  "keywords": [
    "task",
    "parallel",
    "serial",
    "sequential",
    "run",
    "npm-scripts",
    "npm",
    "tool",
    "commandline",
    "command",
    "cli",
    "dependencies",
    "local"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/richardpj/shared-run.git"
  },
  "bugs": {
    "url": "https://github.com/richardpj/shared-run/issues"
  },
  "bin": {
    "shared-run": "./bin/shared-run.js"
  },
  "scripts": {
    "test": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec",
    "cover:fix_lcov": "node fix_lcov.js",
    "cover:report": "codeclimate-test-reporter < ./coverage/lcov.info",
    "cover": "run-s cover:*"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "codeclimate-test-reporter": "^0.3.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "npm-run-all": "^3.1.0"
  }
}
